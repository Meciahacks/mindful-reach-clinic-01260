{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "env": {
    "VITE_API_URL": {
      "required": true
    },
    "GOOGLE_SHEET_ID": {
      "required": true
    },
    "GOOGLE_CLIENT_EMAIL": {
      "required": true
    },
    "GOOGLE_PRIVATE_KEY": {
      "required": true
    },
    "SMTP_HOST": {
      "required": true
    },
    "SMTP_PORT": {
      "required": true
    },
    "SMTP_USER": {
      "required": true
    },
    "SMTP_PASS": {
      "required": true
    },
    "SMTP_SECURE": {
      "required": false
    },
    "OWNER_EMAIL": {
      "required": true
    },
    "FRONTEND_URL": {
      "required": true
    }
  },
  "functions": {
    "api/send-email.js": {
      "memory": 1024,
      "maxDuration": 30
    },
    "api/submit-to-sheets.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  }
}
