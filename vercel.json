{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "env": [
    "VITE_API_URL",
    "GOOGLE_SHEET_ID",
    "GOOGLE_CLIENT_EMAIL",
    "GOOGLE_PRIVATE_KEY",
    "SMTP_HOST",
    "SMTP_PORT",
    "SMTP_USER",
    "SMTP_PASS",
    "SMTP_SECURE",
    "OWNER_EMAIL",
    "FRONTEND_URL"
  ],
  "functions": {
    "api/send-email.js": {
      "memory": 1024,
      "maxDuration": 30
    },
    "api/submit-to-sheets.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  }
}
